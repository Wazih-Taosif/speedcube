<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="max-w-6xl mx-auto px-6 py-10">

        <!-- Page Title -->
        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>
            <h1 class="px-4 text-3xl font-bold text-gray-800">Your Cart</h1>
            <div class="flex-1 border-t border-gray-300"></div>
        </div>

        {% if cart and cart|length > 0 %}

        <!-- Cart Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-6">

                {% for item in cart %}
                <div class="flex items-center gap-6 bg-white p-5 rounded-xl shadow">

                    <!-- Product Image -->
                    <img src="{{ item['Image'] }}" alt="{{ item['Name'] }}"
                        class="w-24 h-24 object-contain rounded-lg bg-gray-50">

                    <!-- Product Info -->
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold">{{ item['Name'] }}</h3>
                        <p class="text-gray-500 text-sm">
                            Category: {{ item['Category'] }}
                        </p>
                        <p class="text-blue-600 font-semibold mt-1">
                            ${{ item['Price'] * item['Quantity'] }}
                        </p>
                    </div>

                    <!-- Quantity -->
                    <div class="flex flex-col items-center">
                        <label class="text-sm text-gray-600 mb-1">Qty</label>
                        <input type="number" value="{{ item['Quantity'] }}" min="1"
                            class="w-16 text-center border border-gray-300 rounded-lg py-1">
                    </div>

                    <!-- Remove -->
                    <a href="/cart/remove/{{ item['ID'] }}" class="text-red-500 hover:text-red-700 text-sm font-medium">
                        Remove
                    </a>

                </div>
                {% endfor %}

            </div>

            <!-- Order Summary -->
            <div class="bg-white p-6 rounded-xl shadow h-fit">

                <h2 class="text-xl font-bold mb-4">Order Summary</h2>

                <div class="flex justify-between text-gray-700 mb-2">
                    <span>Subtotal</span>
                    <span>${{ subtotal }}</span>
                </div>

                <div class="flex justify-between text-gray-700 mb-2">
                    <span>Tax</span>
                    <span>${{ tax }}</span>
                </div>

                <div class="flex justify-between font-semibold text-lg border-t pt-4 mt-4">
                    <span>Total</span>
                    <span>${{ total }}</span>
                </div>

                <a href="/checkout" class="mt-6 block w-full text-center bg-blue-600 text-white py-3 rounded-xl
                      text-lg font-semibold hover:bg-blue-700 transition">
                    Proceed to Checkout
                </a>
            </div>

        </div>

        {% else %}

        <!-- Empty Cart -->
        <div class="text-center py-20">
            <p class="text-xl text-gray-600 mb-6">
                Your cart is empty ðŸ›’
            </p>
            <a href="/browse" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg
                  hover:bg-blue-700 transition">
                Browse Products
            </a>
        </div>

        {% endif %}

    </div>

</body>

</html>