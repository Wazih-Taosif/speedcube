<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    {% include "components/navbar.html.jinja" %}
    <div class="px-8 py-10 max-w-5xl mx-auto">

        <div class="flex flex-col md:flex-row md:space-x-10 space-y-10 md:space-y-0">

            <!-- Product Image -->
            <div class="flex-1">
                <img src="{{ product['Image'] }}" alt="{{ product['Name'] }}"
                    class="w-full h-[450px] object-contain rounded-xl shadow bg-white">
            </div>

            <!-- Product Info -->
            <div class="flex-1 flex flex-col justify-between">
                <div>
                    <h1 class="text-4xl font-bold mb-4">
                        {{ product['Name'] }}
                    </h1>

                    <p class="text-2xl font-semibold text-gray-700 mb-6">
                        ${{ product['Price'] }}
                    </p>

                    <p class="text-gray-600 leading-relaxed mb-6">
                        {{ product['Description'] if product['Description'] else "No description available." }}
                    </p>
                </div>

                <!-- Add to Cart -->
                <form action="/product/{{ product['ID'] }}/add_to_cart" method="post" class="flex items-end gap-4">
                    <div>
                        <label class="text-sm font-medium text-gray-600 mb-1">Quantity</label>
                        <input type="number" name="qty" value="1" min="1" max="3" class="w-20 px-3 py-2 border border-gray-300 
                        rounded-lg text-center font-medium
                        focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <button href="/add_to_cart/{{ product['ID'] }}" class="flex items-center justify-center gap-2 
                                bg-blue-600 text-white px-8 py-2 rounded-xl text-lg font-semibold
                                shadow-md hover:shadow-lg hover:bg-blue-700
                                active:scale-95 transition-all duration-200">
                            Add to Cart
                        </button>
                    </div>

                </form>
            </div>

        </div>

    </div>


    <!-- Reviews Section -->
    <!-- Average Rating -->
    {% if total_reviews > 0 %}
    <div class="mb-4">
        <p class="text-lg font-semibold text-center">
            ⭐ {{ "%.1f"|format(avg_rating) }} / 5
        </p>
        <p class="text-sm text-gray-500 text-center">
            Based on {{ total_reviews }} reviews
        </p>
    </div>
    {% endif %}


    <!-- Already written reviews -->
    <div class="px-8 py-10 max-w-4xl mx-auto">

        <h2 class="text-3xl font-bold mb-6">Customer Reviews</h2>

        {% if reviews and reviews|length > 0 %}
        <div class="space-y-6">
            {% for review in reviews %}
            <div class="bg-white p-6 rounded-xl shadow">

                <div class="flex items-center justify-between mb-2">
                    <p class="font-semibold text-gray-800">
                        {{ review['Name'] }}
                    </p>
                    <p class="text-sm text-gray-500">
                        {{ review['Timestamp'].strftime('%b %d, %Y') }}
                    </p>
                </div>

                <div class="flex items-center gap-2 mb-2">
                    <div class="text-yellow-500 text-lg">
                        {% for i in range(review['Rating']) %}
                        ★
                        {% endfor %}
                        {% for i in range(5 - review['Rating']) %}
                        ☆
                        {% endfor %}
                    </div>

                    <span class="text-sm text-gray-600">
                        {{ review['Rating'] }}/5
                    </span>
                </div>


                <p class="text-gray-700">
                    {{ review['Description'] }}
                </p>

            </div>
            {% endfor %}
        </div>
        {% else %}
        <p class="text-gray-500">No reviews yet.</p>
        {% endif %}
    </div>

    <!-- Review form -->
    <div class="px-8 pb-16 max-w-4xl mx-auto">

        {% if current_user.is_authenticated %}

        <h3 class="text-2xl font-semibold mb-4">Write a Review</h3>

        <form method="POST" action="/product/{{ product['ID'] }}/review" class="space-y-4">

            <textarea name="description" required class="w-full border rounded-lg p-3"
                placeholder="Write your review..."></textarea>

            <select name="rating" required class="border rounded-lg p-2">
                <option value="">Select rating</option>
                <option value="5">5 ⭐</option>
                <option value="4">4 ⭐</option>
                <option value="3">3 ⭐</option>
                <option value="2">2 ⭐</option>
                <option value="1">1 ⭐</option>
            </select>

            <button class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                Submit Review
            </button>

        </form>

        {% else %}
        <p class="text-gray-600">
            <a href="/login" class="text-blue-600 underline">Log in</a>
            to write a review.
        </p>
        {% endif %}

    </div>


    <!--Similar Products-->
    <div class="px-8 py-10 max-w-6xl mx-auto">

        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>

            <h1 class="px-4 text-3xl font-bold text-center text-gray-800">
                Similar Products
            </h1>

            <div class="flex-1 border-t border-gray-300"></div>
        </div>


        {% if products and products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for item in products %}
            <a href="/product/{{ item['ID'] }}"
                class="block bg-white shadow-md rounded-xl p-4 hover:shadow-xl transition duration-300">

                <img src="{{ item['Image'] }}" alt="{{ item['Name'] }}"
                    class="w-full h-48 object-cover rounded-lg mb-3">

                <h3 class="text-lg font-semibold mb-1">
                    {{ item['Name'] }}
                </h3>

                <p class="text-gray-700 font-medium">
                    ${{ item['Price'] }}
                </p>
            </a>
            {% endfor %}
        </div>

        {% else %}
        <p class="text-gray-600">No similar products available.</p>
        {% endif %}

    </div>

    <!--Other Products-->
    <div class="px-8 py-10 max-w-6xl mx-auto">

        <div class="flex items-center my-10">
            <div class="flex-1 border-t border-gray-300"></div>

            <h1 class="px-4 text-3xl font-bold text-center text-gray-800">
                Other Products
            </h1>

            <div class="flex-1 border-t border-gray-300"></div>
        </div>


        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for item in other_products %}
            <a href="/product/{{ item['ID'] }}"
                class="block bg-white shadow rounded-xl p-4 hover:shadow-lg transition duration-300">

                <img src="{{ item['Image'] }}" alt="{{ item['Name'] }}"
                    class="w-full h-48 object-contain rounded-lg mb-4">

                <h3 class="text-lg font-semibold mb-2">{{ item['Name'] }}</h3>
                <p class="text-gray-700 font-medium">${{ item['Price'] }}</p>
            </a>
            {% endfor %}
        </div>

    </div>






</body>

</html>